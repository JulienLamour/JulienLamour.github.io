	urldate = {2022-10-18},
	journal = {Global Change Biology},
	author = {Lamour, Julien and Davidson, Kenneth J. and Ely, Kim S. and Le Mogu√©dec, Gilles and Leakey, Andrew D. B. and Li, Qianyu and Serbin, Shawn P. and Rogers, Alistair},
	month = jun,
	year = {2022},
	keywords = {leaf gas exchange, minimum conductance, optimality model, residual conductance, stomatal conductance, trait covariation, transpiration, water use efficiency},
	pages = {3537--3556},
}

